<!DOCTYPE html>
<html lang="en">
  <%- include('./ReusableComponents/BootstrapCDN.ejs') %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connect With US</title>
</head>
<body >

    <%- include('./ReusableComponents/navbar.ejs',{ activePage : page, email: emailTo }) %>

    <br><br>

    <section class="contact-section" style="padding: 50px 0;">
      <div class="container">

        <!-- Add Telegram Option -->
        <h2 class="contact-heading text-center" style="font-size: 36px; margin-bottom: 40px;">Connect with Us</h2>
          <div class="row justify-content-center">
            <div class="col-md-4 col-sm-6 mb-4">
              <div class="text-center">
                <div class="contact-icon" style="font-size: 48px; color: #3498db;">
                  <i class="fab fa-telegram-plane"></i>
                </div>
                <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">Telegram</div>
                <a href="<%=Telegram%>" target="_blank" class="contact-link" style="color: #3498db; text-decoration: none;">Join Us</a>
              </div>
            </div>

            <!-- Add Whatsapp Option -->
            <div class="col-md-4 col-sm-6 mb-4">
              <div class="text-center">
                <div class="contact-icon" style="font-size: 48px; color: #27ae60;">
                  <i class="fab fa-whatsapp"></i>
                </div>
                <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">WhatsApp</div>
                <a href="<%=WhatsApp%>" target="_blank" class="contact-link" style="color: #27ae60; text-decoration: none;">Chat Now</a>
              </div>
            </div>

            <!-- Add Discord Option -->
            <div class="col-md-4 col-sm-6 mb-4">
              <div class="text-center">
                <div class="contact-icon" style="font-size: 48px; color: #9b59b6;">
                  <i class="fab fa-discord"></i>
                </div>
                <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">Discord</div>
                <a href="<%=Discord%>" target="_blank" class="contact-link" style="color: #9b59b6; text-decoration: none;">Join Server</a>
              </div>
            </div>

            <!-- Add Github Option -->
            <div class="col-md-4 col-sm-6 mb-4">
              <div class="text-center">
                <div class="contact-icon" style="font-size: 48px; color: #333;">
                  <i class="fab fa-github"></i>
                </div>
                <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">GitHub</div>
                <a href="<%=GitHub%>" target="_blank" class="contact-link" style="color: #333; text-decoration: none;">View Repo</a>
              </div>
            </div>

            <!-- Add LinkedIn Option -->
            <div class="col-md-4 col-sm-6 mb-4">
              <div class="text-center">
                <div class="contact-icon" style="font-size: 48px; color: #e74c3c;">
                  <i class="fab fa-linkedin-in"></i>
                </div>
                <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">LinkedIn</div>
                <a href="<%=LinkedIn%>" target="_blank" class="contact-link" style="color: #e74c3c; text-decoration: none;">Connect</a>
              </div>
            </div>
          
          <!-- Add Linktree Option -->
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="text-center">
              <div class="contact-icon" style="font-size: 48px; color: #e67e22;">
                <i class="fas fa-link"></i>
              </div>
              <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">Linktree</div>
              <a href="<%=LinkTree%>" target="_blank" class="contact-link" style="color: #e67e22; text-decoration: none;">Visit Linktree</a>
            </div>
          </div>

          <!-- Add Codeforces Option -->
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="text-center">
              <div class="contact-icon" style="font-size: 48px; color: #1e90ff;">
                <i class="fas fa-code"></i>
              </div>
              <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">Codeforces</div>
              <a href="<%=Codeforces%>" target="_blank" class="contact-link" style="color: #1e90ff; text-decoration: none;">View Profile</a>
            </div>
          </div>

          <!-- Add gmail option -->
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="text-center">
              <div class="contact-icon" style="font-size: 48px; color: #d93025;">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">Email</div>
              <a href="mailto:<%=Gmail%>" class="contact-link" style="color: #d93025; text-decoration: none;">Send Email</a>
            </div>
          </div>
          
          <!-- Add Instagram Option -->
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="text-center">
              <div class="contact-icon" style="font-size: 48px; color: #bc2a8d;">
                <i class="fab fa-instagram"></i>
              </div>
              <div class="contact-label" style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">Instagram</div>
              <a href="<%=Instagram%>" target="_blank" class="contact-link" style="color: #bc2a8d; text-decoration: none;">Follow Us</a>
            </div>
          </div>

        </div>
        
      </div>
    </section>
    <%- include('./ReusableComponents/Credit.ejs') %>
  </body>
</html>