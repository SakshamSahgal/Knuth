    <div class="card">
      <!-- Header with Color -->
      <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center event-header">
        <h5 class="card-title"><a href="<%= events[i].eventLink %>" class="linkCSS" target="_blank"><%= events[i].eventName %></a></h5>
        <button class="btn ml-auto" onclick="deleteCard(this)"><span> &#10006; </span></button>
